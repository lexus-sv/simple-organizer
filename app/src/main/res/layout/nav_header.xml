<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="?attr/headerbackground"
    android:gravity="bottom"
    android:padding="16dp">
    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/alarm_on"
        android:tint="@color/white"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/navigation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="day and month"
        android:layout_alignTop="@+id/img_icon"
        android:layout_toRightOf="@+id/img_icon"
        />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/calendar"
        android:tint="?attr/white"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/img_icon"
        android:id="@+id/header_calendar"
        />

</RelativeLayout>